<resources>

    <style name="Base.Theme.SunflowerClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorOnSurface">@color/green_905</item>
        <item name="colorAccent">@color/green_700</item>
        <item name="colorSurface">@color/gray_50</item>
        <item name="colorSecondary">@color/yellow_500</item>
        <item name="colorOnPrimarySurface">@color/black</item>
        <item name="android:colorBackground">@color/green_500</item>

        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="Theme.SunflowerClone" parent="Base.Theme.SunflowerClone" />

    <style name="Theme.SunflowerClone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SunflowerClone.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.SunflowerClone.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.SunflowerClone.Toolbar.ExpandedText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SunflowerClone.ToolbarOverlay">
        <item name="colorControlHighlight">@color/ripple_light</item>
    </style>

</resources>