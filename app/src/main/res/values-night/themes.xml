<resources>

    <style name="Base.Theme.SunflowerClone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/gray_50_a600</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">@color/green_300</item>
        <item name="colorSurface">@color/green_900</item>
        <item name="colorSecondary">@color/yellow_300</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <item name="android:colorBackground">@color/green_900</item>
        <item name="android:statusBarColor">@color/green_905</item>

        <item name="android:fontFamily">@font/gilroy_medium</item>
    </style>

    <style name="Theme.SunflowerClone" parent="Base.Theme.SunflowerClone" />

    <style name="Theme.SunflowerClone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SunflowerClone.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:letterSpacing">0.0125</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.SunflowerClone.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.SunflowerClone.Toolbar.ExpandedText" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.SunflowerClone.ToolbarOverlay">
        <item name="colorControlHighlight">@color/ripple_dark</item>
    </style>

    <style name="Theme.SunflowerClone.DialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">?attr/colorAccent</item>
        <item name="colorSurface">@color/gray_800</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButton</item>
        <item name="alertDialogStyle">@style/Container</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="Container" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.SunflowerClone.Dialog</item>
    </style>

    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Subtitle1
        </item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.SunflowerClone.Dialog</item>
    </style>

</resources>